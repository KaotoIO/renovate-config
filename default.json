{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "timezone": "Europe/Madrid Africa/Ceuta",
  "schedule": [
    "on the first day of the month"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "react monorepo",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint"]
    },
    {
      "groupName": "@kie-tools",
      "matchPackagePatterns": ["@kie-tools"]
    },
    {
      "groupName": "@opentelemetry",
      "matchPackagePatterns": ["@opentelemetry"]
    },
    {
      "groupName": "@patternfly",
      "matchPackagePatterns": ["@patternfly"]
    },
    {
      "groupName": "@lerna-lite",
      "matchPackagePatterns": ["@lerna-lite"]
    },
    {
      "extends": "monorepo:storybook",
      "groupName": "storybook monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ]
    }
  ]
}
